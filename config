# general settings
auto-reload yes
max-items           100

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# highlights

color background          black   default
color listnormal          color248   default
color listnormal_unread   color6     default
color listfocus           color236   color12
color listfocus_unread    color15    color12
color info                color248   color236
color article             color248   default

# highlights
highlight article "^(Feed|Link):.*$" color6 default bold
highlight article "^(Title|Date|Author):.*$" color6 default bold
highlight article "https?://[^ ]+" color10 default underline
highlight article "\\[[0-9]+\\]" color10 default bold
highlight article "\\[image\\ [0-9]+\\]" color10 default bold
highlight feedlist ".*(0/0))" black 

browser w3m
macro , open-in-browser
macro v set browser "setsid -f mpv"; open-in-browser ; set browser w3m
macro i set browser "setsid -f sxiv"; open-in-browser ; set browser w3m
macro f set browser "setsid -f firefox"; open-in-browser ; set browser w3m

